<div id="progress" >
  <div id="progress-inner">

    <table>
      <thead>
        <tr>
          <th colspan=3><h3>Progress</h3></th>
        </tr>
        <tr>
          <th colspan=3><h4>End Date</h4></th>
          </tr> 
        <tr>
          <th colspan=3><h4><%= @end_date %></h4></th>
        </tr> 
      </thead>
      <tbody>
            <tr>
              <th> Current BF Pct </th>
              <th> Target BF Pct </th>
            </tr>
